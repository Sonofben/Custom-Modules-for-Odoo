<odoo>
    <template id="wallet_page_template" name="Wallet Page">
        <t t-call="website.layout">
            <div class="container mt-4">
                <h2>My Wallet</h2>
                <p><strong>Current Balance:</strong> â‚¦<t t-esc="wallet.balance"/></p>
                <a href="#" class="btn btn-primary">Top Up Wallet</a>

                <h3 class="mt-4">Transaction History</h3>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Type</th>
                            <th>Amount</th>
                            <th>Reference</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="transactions" t-as="txn">
                            <tr>
                                <td><t t-esc="txn.date"/></td>
                                <td><t t-esc="txn.type"/></td>
                                <td><t t-esc="txn.amount"/></td>
                                <td><t t-esc="txn.reference"/></td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
        </t>
    </template>
</odoo>


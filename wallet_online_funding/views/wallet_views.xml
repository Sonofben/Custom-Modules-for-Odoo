<odoo>
  <template id="wallet_fund_template" name="Fund Wallet" page="True">
    <t t-call="website.layout">
      <div class="container mt-4">
        <h3>Fund Your Wallet</h3>
        <form action="/wallet/fund/submit" method="post">
          <div class="form-group">
            <label>Email</label>
            <input type="email" name="email" class="form-control"/>
          </div>
          <div class="form-group mt-2">
            <label>Phone</label>
            <input type="text" name="phone" class="form-control"/>
          </div>
          <div class="form-group mt-2">
            <label>Amount (NGN)</label>
            <input type="number" name="amount" min="50" step="50" class="form-control"/>
          </div>
          <button class="btn btn-primary mt-3" type="submit">Proceed to Payment</button>
        </form>
      </div>
    </t>
  </template>

  <template id="wallet_error_template" name="Wallet Error" page="True">
    <t t-call="website.layout">
      <div class="container mt-4">
        <h3>Oops! Something went wrong</h3>
        <p><t t-esc="message"/></p>
        <a href="/wallet/fund" class="btn btn-secondary">Back</a>
      </div>
    </t>
  </template>
</odoo>


<odoo>
  <record id="wallet_funded_email_template" model="mail.template">
    <field name="name">Wallet Funded Email</field>
    <field name="model_id" ref="base.model_res_partner"/>
    <field name="subject">Your wallet was funded</field>
    <field name="email_from">${(object.company_id.email_formatted or 'noreply@yourdomain.com')|safe}</field>
    <field name="body_html"><![CDATA[
      <p>Hello ${object.name},</p>
      <p>Your wallet has been funded with ₦${ctx.get('amount', '0.00')}.</p>
      <p>Current balance: ₦${object.wallet_balance}</p>
      <p>Thank you.</p>
    ]]></field>
  </record>
</odoo>



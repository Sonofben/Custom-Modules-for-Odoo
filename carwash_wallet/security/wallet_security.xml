<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Record Rules for Portal Users -->
    <!-- Portal users can only see their own wallet transactions -->
    <record id="wallet_transaction_portal_rule" model="ir.rule">
        <field name="name">Portal User: Own Wallet Transactions</field>
        <field name="model_id" ref="model_wallet_transaction"/>
        <field name="domain_force">[('partner_id', '=', user.partner_id.id)]</field>
        <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
    </record>

    <!-- Portal users can only see their own wallet top-ups -->
    <record id="wallet_topup_portal_rule" model="ir.rule">
        <field name="name">Portal User: Own Wallet Top-ups</field>
        <field name="model_id" ref="model_wallet_topup"/>
        <field name="domain_force">[('partner_id', '=', user.partner_id.id)]</field>
        <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
    </record>

    <!-- Internal users can see all records -->
    <record id="wallet_transaction_user_rule" model="ir.rule">
        <field name="name">Internal User: All Wallet Transactions</field>
        <field name="model_id" ref="model_wallet_transaction"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="wallet_topup_user_rule" model="ir.rule">
        <field name="name">Internal User: All Wallet Top-ups</field>
        <field name="model_id" ref="model_wallet_topup"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
    </record>
</odoo>
